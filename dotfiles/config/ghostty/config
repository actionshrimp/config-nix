# Font
font-family = JetBrainsMono NFM
font-family = Noto Sans
font-size = 12

# Disable ligatures (matching wezterm harfbuzz_features)
font-feature = -calt
font-feature = -clig
font-feature = -liga

# Cursor
cursor-style = block
cursor-style-blink = false

# Scrollback (100MB - very large)
scrollback-limit = 100000000

# Shell integration
shell-integration = zsh
shell-integration-features = no-cursor

# Appearance
window-decoration = true

# Treat Option as Alt/Meta (sends ESC sequences instead of Unicode chars)
macos-option-as-alt = true

# UK keyboard: Alt+3 = # (since Option is now Alt)
keybind = alt+three=text:#

# Bell (disable all bell features)
bell-features = no-attention, no-title
